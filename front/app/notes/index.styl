$border-color = #ddd
$bg-color = #f5f5f5

.notes-container
  border 4px solid $border-color
  display flex
  min-height 100vh

.notes-list
  display flex
  flex-direction column
  width 30%
  border-right 4px solid $border-color
  resize horizontal
  overflow auto

  &__header
    background-color $bg-color
    border-bottom 1px solid $border-color
    padding 10px
    display flex
    justify-content space-between

    &__icon
      vertical-align middle

    &__title
      text-align center
      flex-grow 1

  &__content
    flex-grow 1
    overflow-y scroll

  &__item
    border-bottom 1px solid $border-color
    padding 10px

.notes-edit
  flex-grow 1
  display flex
  flex-direction column

  &__textarea
    flex 1
    border 0
    padding 10px
    resize none

  &__footer
    background-color $bg-color
    border-top 1px solid $border-color
    display flex

    &__lastsaved
      padding 10px 30px
      flex 1
      text-align right
      font-size small
      font-style italic
      color darkgray

    &__save
      padding 10px 30px
      border 0
      border-left 1px solid $border-color
      background-color $bg-color
      cursor pointer

      &:hover, &:focus, &:active
        text-decoration none
        transition all 0.4s ease

      &:hover, &:focus
        background-color darken($bg-color, 5%)

      &:active
        background darken($bg-color, 20%)
        outline none
        box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)


